<!-- _layouts/teaching_bib.liquid -->
{% assign entry_has_altmetric_badge = false %}
{% assign entry_has_dimensions_badge = false %}
{% assign entry_has_google_scholar_badge = false %}
{% assign entry_has_inspirehep_badge = false %}

<div class="row">
  <div id="{{ entry.key }}" class="{% if site.enable_teaching_thumbnails %}col-sm-8{% else %}col-sm-10{% endif %}">
    
    <!-- Title with bigger font -->
    <div class="title">{{ entry.title }}</div>
    
    <!-- Description -->
    <div class="author">
      {{ entry.description }}
    </div>

    <!-- Course Details: Role, Institution, Duration -->
    {% capture course_details %}
      {% if entry.role %}{{ entry.role }}{% endif %}
      {% if entry.role and entry.institution %}, {% endif %}
      {% if entry.institution %}<em>{{ entry.institution }}</em>{% endif %}
      {% if entry.duration and (entry.role or entry.institution) %}, {% endif %}
      {% if entry.duration %}{{ entry.duration }}{% endif %}
    {% endcapture %}
    
    <div class="periodical">
      {{ course_details | strip }}
    </div>
  </div>
</div>